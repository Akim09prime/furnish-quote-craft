
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Only authenticated users can upload and only images
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                    request.auth.uid == userId && 
                    request.resource.contentType.matches('image/.*') &&
                    request.resource.size < 20 * 1024 * 1024; // 20MB max
    }
    
    // Allow access to product images for all categories and subcategories
    match /{categoryName}/{subcategoryName}/{allPaths=**} {
      allow read: if true; // Public read access for product images
      allow write: if isAuthenticated() && 
                     request.resource.contentType.matches('image/(jpeg|jpg|png|gif|webp)') &&
                     request.resource.size < 20 * 1024 * 1024; // 20MB max
    }
  }
}
